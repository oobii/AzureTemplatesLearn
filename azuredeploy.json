{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    //     "storageName": {
    //         "type": "string",
    //         "minLength": 3,
    //         "maxLength": 24,
    //         "metadata": {
    //             "description": "The name of the Azure storage resource"
    //          }
    // },
        "storagePrefix": {
            "type": "string",
            "minLength": 3,
            "maxLength": 11,
            "metadata": {
                "description": "Prefix for the Azure storage resource"
             }
    },
    // This is allowed values for storage account
        "storageSKU": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_ZRS",
                "Premium_LRS",
                "Premium_ZRS",
                "Standard_GZRS",
                "Standard_RAGZRS"
            ]
 }},

    "functions": [],
    "variables": {},
    "resources": [{
        //"name": "[parameters('storageName')]",
        "name": "[toLower(concat(parameters('storagePrefix'),uniqueString(resourceGroup().id)))]",
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2019-06-01",
        "tags": {
            //"displayName": "[parameters('storageName')]",
            "displayName": "[toLower(concat(parameters('storagePrefix'),uniqueString(resourceGroup().id)))]"
        },
        "location": "[resourceGroup().location]",
        "kind": "StorageV2",
        "sku": {
            "name": "[parameters('storageSKU')]",
            "tier": "Standard"
        }
    }],
    "outputs": {
        "storageEndpoint": {
            "type": "object",
            "value": "[reference(toLower(concat(parameters('storagePrefix'),uniqueString(resourceGroup().id))))]"
        },
        "myTestOutput": {
            "type": "string",
            "value": "TTT"
        }
    }
}